#include "juk3.h"

void	ft_print_screen(int *t, int size)
{
	int	i;
	int is_low;

	i = 1;
	is_low = 1;
	while (i < size)
	{
		if (t[i - 1] >= t[i])
			is_low = 0;
		i++;
	}
	if (is_low)
	{
		i = 0;
		while (i < size)
			ft_putchar(t[i++] + '0');
		if (t[0] < (10 - size))
		{
			ft_putchar(',');
			ft_putchar(' ');
		}
	}
}

void	ft_print_n(int n)
{
	int i;
	int tab[n];

	i = 0;
	if (n == 1)
		while (i < 10)
			ft_putchar(i++ + '0');
	while (i < n)
		tab[i++] = 0;
	while (tab[0] <= (10 - n) && n > 1)
	{
		ft_print_screen(tab, n);
		tab[n - 1]++;
		i = n;
		while (i && n > 1)
		{
			i--;
			if (tab[i] > 9)
			{
				tab[i - 1]++;
				tab[i] = 0;
			}
		}
	}
}

int		main(int nb_arg, char **input)
{
//	char x;

	if (nb_arg > 1)
	{
//		x = (input[1] + '0');
		ft_print_n(input[1] + '0');
	}
	return (0);
}
